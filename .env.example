# Application Settings
# Enable debug mode (true/false)
LITESTAR_DEBUG=false

# Security / Auth
# IMPORTANT: Override in production with a long random value
SECRET_KEY=change_me_dev_secret_key

# CORS (comma-separated list). Use * to allow all (not recommended in production)
ALLOWED_CORS_ORIGINS=*

# CSRF Settings
CSRF_COOKIE_NAME=XSRF-TOKEN
CSRF_COOKIE_SECURE=false

# Database Settings
# Full DSN: postgresql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_DSN=postgresql://postgres:password@localhost:5432/app_db
DATABASE_MIN_SIZE=4
DATABASE_MAX_SIZE=16
DATABASE_MAX_QUERIES=50000
DATABASE_MAX_INACTIVE_CONNECTION_LIFETIME=300.0

# JWT / Session
# Signing algorithm and static session salt (change SESSION_SALT in production!)
JWT_ALGORITHM=HS256
SESSION_SALT=xYzDeV@0000

# Domain Defaults
DEFAULT_PLAYER_LANGUAGE=pt-br

# Notes:
# 1. Copy this file to .env and adjust values.
# 2. Never commit your real .env with production secrets.
